{
	"openapi": "3.0.1",
	"info": {
		"title": "Qurba",
		"description": "API documentations for qurba",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000/"
		}
	],
	"tags": [
		{
			"name": "Restaurants",
			"description": "restaurant operations"
		},
		{
			"name": "Users",
			"description": "user operations"
		}
	],
	"paths": {
		"/restaurants": {
			"get": {
				"tags": [
					"Restaurants"
				],
				"summary": "List all restaurants",
				"operationId": "listRestaurants",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			},
			"post": {
				"tags": [
					"Restaurants"
				],
				"summary": "Add a restaurant",
				"operationId": "addOneRestaurant",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		},
		"/restaurants/nearest": {
			"get": {
				"tags": [
					"Restaurants"
				],
				"summary": "List all the nearest restaurants",
				"operationId": "listNearestRestaurants",
				"parameters": [
					{
						"in": "query",
						"name": "lng",
						"type": "number",
						"description": "coordinates in y direction"
					},
					{
						"in": "query",
						"name": "lat",
						"type": "number",
						"description": "coordinates in x direction"
					},
					{
						"in": "query",
						"name": "maxDistance",
						"type": "number",
						"description": "Maximum distance"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		},
		"/users": {
			"get": {
				"tags": [
					"Users"
				],
				"summary": "List all users",
				"operationId": "listUsers",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			},
			"post": {
				"tags": [
					"Users"
				],
				"summary": "Add a user",
				"operationId": "addOneUser",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/RequestBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		},
		"/users/{id}": {
			"get": {
				"tags": [
					"Users"
				],
				"summary": "Get user by id",
				"operationId": "getUserById",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		},
		"/users/{id}/restaurants": {
			"get": {
				"tags": [
					"Users"
				],
				"summary": "List all user favorite restaurants",
				"operationId": "listUserFavRestaurants",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			},
			"post": {
				"tags": [
					"Users"
				],
				"summary": "Add a restaurant to use favorites",
				"operationId": "addOneUserRestaurant",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/RequestBody"
							}
						}
					}
				},
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		},
		"/users/{id}/restaurants/${restaurantId}": {
			"delete": {
				"tags": [
					"Users"
				],
				"summary": "Remove a restaurant from user favorites",
				"operationId": "removeOneUserRestaurant",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "string"
					},
					{
						"name": "restaurantId",
						"in": "path",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"$ref": "#/components/schemas/SuccessResponse"
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"SuccessResponse": {
				"type": "object",
				"properties": {
					"data": {
						"type": "array"
					},
					"count": {
						"type": "number"
					},
					"code": {
						"type": "number"
					},
					"action": {
						"type": "string"
					},
					"message": {
						"type": "string"
					}
				}
			},
			"RequestBody": {
				"type": "object",
				"properties": {
					"property": {
						"type": "string"
					}
				}
			}
		}
	}
}